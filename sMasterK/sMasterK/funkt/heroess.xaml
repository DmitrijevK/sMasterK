<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              BackgroundImageSource="pusja.png"
             x:Class="sMasterK.funkt.heroess">
    <ContentPage.Content>
            <StackLayout Margin="10" Orientation="Vertical">
                <Image x:Name="ProfileImage"></Image>
            <ListView x:Name="aboutlis" ItemSelected="aboutlis_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell TextColor="Black" Text="{Binding Text}" Detail="{Binding Detail}"
                                       ImageSource="{Binding ImagePath}">
                        </ImageCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
        </ContentPage.Content>
    </ContentPage>